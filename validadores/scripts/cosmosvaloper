# Shows cosmovaloper

keyname=`gaiacli keys list | awk 'FNR==2{print $1}'`
cosmovaloper=`gaiacli keys show ${keyname} --bech=val | awk 'FNR==2{print $3}'`

echo "cosmovaloper = $cosmovaloper"

